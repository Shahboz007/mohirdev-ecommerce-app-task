<%- include('../../partials/dashboardHeaderAndSidebar.ejs') %>
  <!-- Product Form -->
  <div class="bg-white p-6 rounded-lg shadow-lg mt-6">
    <h2 class="text-gray-700 font-semibold mb-4">Add New Product</h2>
    <form action="/dashboard/products/create" method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        <!-- Product Name -->
        <div>
          <label class="block text-gray-600 mb-2">Product Name</label>
          <input type="text" class="w-full p-3 rounded border border-gray-300" placeholder="Enter product name"
            name="name" value="<%=initialValues.name%>">
        </div>

        <!-- Price -->
        <div>
          <label class="block text-gray-600 mb-2">Price</label>
          <input type="number" class="w-full p-3 rounded border border-gray-300" placeholder="Enter price" name="price">
        </div>

        <!-- Category -->
        <!-- <div>
                    <label class="block text-gray-600 mb-2">Category</label>
                    <select class="w-full p-3 rounded border border-gray-300">
                        <option>Select a category</option>
                        <option>Electronics</option>
                        <option>Fashion</option>
                        <option>Home & Garden</option>
                        <option>Health & Beauty</option>
                    </select>
                </div> -->

        <!-- Stock Quantity -->
        <div>
          <label class="block text-gray-600 mb-2">Stock Quantity</label>
          <input type="number" class="w-full p-3 rounded border border-gray-300" placeholder="Enter stock quantity"
            name="stock">
        </div>

        <!-- Image Upload -->
        <div class="col-span-1 md:col-span-2">
          <label class="block text-gray-600 mb-2">Product Image</label>
          <input type="text" class="w-full p-3 rounded border border-gray-300" name="image">
        </div>

        <!-- Description -->
        <div class="col-span-1 md:col-span-2">
          <label class="block text-gray-600 mb-2">Description</label>
          <textarea class="w-full p-3 rounded border border-gray-300" rows="4" placeholder="Enter product description"
            name="description"></textarea>
        </div>

      </div>
      <button type="submit" class="mt-4 px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Create
        Product</button>
    </form>
  </div>
  <%- include('../../partials/dashboardFooter.ejs')%>
<!-- Navigation Bar -->
<%- include('../partials/mainNav.ejs') %>
  <main>
    <!-- Main Container -->
    <div class="container mx-auto p-6 grid grid-cols-12 gap-6 mt-6">

      <!-- Filter Sidebar -->
      <aside class="col-span-12 md:col-span-3 bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-4">Filters</h2>

        <!-- Category Filter -->
        <div class="mb-6">
          <h3 class="text-gray-800 font-medium mb-2">Category</h3>
          <ul class="space-y-2">
            <li><label class="flex items-center"><input type="checkbox" class="mr-2 rounded">Electronics</label></li>
            <li><label class="flex items-center"><input type="checkbox" class="mr-2 rounded">Fashion</label></li>
            <li><label class="flex items-center"><input type="checkbox" class="mr-2 rounded">Home & Garden</label></li>
            <li><label class="flex items-center"><input type="checkbox" class="mr-2 rounded">Toys</label></li>
          </ul>
        </div>

        <!-- Price Filter -->
        <div class="mb-6">
          <h3 class="text-gray-800 font-medium mb-2">Price Range</h3>
          <input type="range" min="0" max="1000" value="500" class="w-full accent-gray-700">
          <div class="flex justify-between text-gray-500 text-sm mt-2">
            <span>$0</span><span>$1000+</span>
          </div>
        </div>

        <!-- Rating Filter -->
        <div class="mb-6">
          <h3 class="text-gray-800 font-medium mb-2">Rating</h3>
          <ul class="space-y-2">
            <li><label class="flex items-center"><input type="radio" name="rating" class="mr-2 rounded">4 stars &
                up</label></li>
            <li><label class="flex items-center"><input type="radio" name="rating" class="mr-2 rounded">3 stars &
                up</label></li>
            <li><label class="flex items-center"><input type="radio" name="rating" class="mr-2 rounded">2 stars &
                up</label></li>
            <li><label class="flex items-center"><input type="radio" name="rating" class="mr-2 rounded">1 star &
                up</label></li>
          </ul>
        </div>

        <!-- Apply Filter Button -->
        <button class="w-full py-2 mt-4 bg-gray-700 text-white rounded-lg hover:bg-gray-800 font-medium">Apply
          Filters</button>
      </aside>

      <!-- Products Section -->
      <section class="col-span-12 md:col-span-9">
        <div class=" grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <%productsData.forEach(item=>{%>
            <div class="bg-white rounded-lg shadow-lg p-5 hover:shadow-xl transition-shadow duration-300">
              <img src="<%=item.image%>" alt="Product Image" class="w-full h-48 object-cover rounded-lg">
              <div class="mt-4">
                <h3 class="text-lg font-semibold text-gray-800">
                  <%=item.name%>
                </h3>
                <p class="text-gray-600">$<%=item.price.toLocaleString()%>
                </p>
                <div class="flex items-center justify-between mt-4">
                  <span class="text-yellow-500">⭐⭐⭐⭐</span>
                  <button class="px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800 font-medium">Add to
                    Cart</button>
                </div>
              </div>
            </div>
            <%})%>
        </div>
      </section>

    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/mainFooter.ejs') %>
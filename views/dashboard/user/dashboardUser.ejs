<%- include('../../partials/dashboardHeaderAndSidebar.ejs') %>
    <a href="/dashboard/users/create" class="bg-gray-800 text-white py-2 px-4 rounded hover:bg-gray-700">
        New User
    </a>
    <!-- Users Table -->
    <div class="bg-white rounded-lg shadow-lg p-6 mt-6">
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Name</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Email</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Role</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Is Active</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Created At</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Updated At</th>
                        <th class="w-1/4 py-3 px-4 text-center text-sm font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    <%data.forEach(item=> {%>
                        <!-- Example Row 1 -->
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-4"><%-item.name%></td>
                            <td class="py-3 px-4"><%-item.email%></td>
                            <td class="py-3 px-4"><%-item.isAdmin%></td>
                            <td class="py-3 px-4"><%-item.isActive%></td>
                            <td class="py-3 px-4"><%-item.createdAt.toLocaleDateString()%></td>
                            <td class="py-3 px-4"><%-item.updatedAt.toLocaleDateString()%></td>
                            <td class="py-3 px-4 text-center">
                                <button class="text-blue-500 hover:text-blue-700">Edit</button>
                                <button class="text-red-500 hover:text-red-700 ml-4">Delete</button>
                            </td>
                        </tr>
                        <%})%>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-between items-center mt-4">
            <span class="text-sm text-gray-600">Showing 1 to 10 of 50 results</span>
            <div>
                <button class="px-3 py-1 mx-1 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">Previous</button>
                <button class="px-3 py-1 mx-1 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">Next</button>
            </div>
        </div>
    </div>
    <%- include('../../partials/dashboardFooter.ejs')%>
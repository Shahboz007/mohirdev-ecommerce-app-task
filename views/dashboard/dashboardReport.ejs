<%- include('../partials/dashboardHeaderAndSidebar.ejs') %>
 <!-- Summary Cards -->
 <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
    <!-- Total Sales -->
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-gray-700 font-semibold">Total Sales</h2>
      <p class="text-3xl font-bold text-gray-900">$45,200</p>
      <p class="text-green-500">+12% from last month</p>
    </div>
    
    <!-- New Users -->
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-gray-700 font-semibold">New Users</h2>
      <p class="text-3xl font-bold text-gray-900">1,200</p>
      <p class="text-green-500">+18% from last month</p>
    </div>
    
    <!-- Revenue -->
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-gray-700 font-semibold">Total Revenue</h2>
      <p class="text-3xl font-bold text-gray-900">$75,800</p>
      <p class="text-green-500">+20% from last month</p>
    </div>
  </div>

  <!-- Graphs Section -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
    <!-- Sales Graph -->
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-gray-700 font-semibold mb-4">Sales Over Time</h2>
      <!-- Placeholder for Sales Graph -->
      <div class="h-64 bg-gray-200 rounded-lg flex items-center justify-center text-gray-500">
        Sales Graph (Placeholder)
      </div>
    </div>

    <!-- User Activity Graph -->
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h2 class="text-gray-700 font-semibold mb-4">User Activity</h2>
      <!-- Placeholder for User Activity Graph -->
      <div class="h-64 bg-gray-200 rounded-lg flex items-center justify-center text-gray-500">
        User Activity Graph (Placeholder)
      </div>
    </div>
  </div>

  <!-- Detailed Reports Table -->
  <div class="bg-white rounded-lg shadow-lg p-6 mt-6">
    <h2 class="text-gray-700 font-semibold mb-4">Detailed Reports</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
          <tr>
            <th class="w-1/5 py-3 px-4 text-left text-sm font-semibold">Report Name</th>
            <th class="w-1/5 py-3 px-4 text-left text-sm font-semibold">Date</th>
            <th class="w-1/5 py-3 px-4 text-left text-sm font-semibold">Status</th>
            <th class="w-1/5 py-3 px-4 text-left text-sm font-semibold">Type</th>
            <th class="w-1/5 py-3 px-4 text-center text-sm font-semibold">Actions</th>
          </tr>
        </thead>
        <tbody class="text-gray-700">
          <!-- Example Row 1 -->
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-4">Monthly Sales Report</td>
            <td class="py-3 px-4">October 2024</td>
            <td class="py-3 px-4"><span class="text-green-500">Completed</span></td>
            <td class="py-3 px-4">Sales</td>
            <td class="py-3 px-4 text-center">
              <button class="text-blue-500 hover:text-blue-700">View</button>
              <button class="text-red-500 hover:text-red-700 ml-4">Delete</button>
            </td>
          </tr>
          <!-- Example Row 2 -->
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-4">User Engagement Report</td>
            <td class="py-3 px-4">October 2024</td>
            <td class="py-3 px-4"><span class="text-green-500">Completed</span></td>
            <td class="py-3 px-4">Engagement</td>
            <td class="py-3 px-4 text-center">
              <button class="text-blue-500 hover:text-blue-700">View</button>
              <button class="text-red-500 hover:text-red-700 ml-4">Delete</button>
            </td>
          </tr>
          <!-- Add more rows as needed -->
        </tbody>
      </table>
    </div>
  </div>
  

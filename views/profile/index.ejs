<!-- Navigation Bar -->
<%- include('../partials/mainNav.ejs') %>
  <main>
    <!-- Main Container -->
    <div class="flex min-h-screen">

      <!-- Sidebar -->
      <%-include('../partials/profileSideBar')%>

        <!-- Content Area -->
        <div class="flex-1 p-6">
          <div id="profile" class="space-y-6">
            <h1 class="text-3xl font-semibold text-gray-800">Profile</h1>
            <div class="bg-white p-6 rounded-lg shadow">
              <h2 class="text-xl font-semibold text-gray-700">User Information</h2>
              <p class="text-gray-600">Manage your profile details.</p>
              <form class="space-y-4 mt-4">
                <div>
                  <label class="block text-gray-600">Name</label>
                  <input type="text" value="John Doe" class="w-full p-2 border rounded-lg">
                </div>
                <div>
                  <label class="block text-gray-600">Email</label>
                  <input type="email" value="johndoe@example.com" class="w-full p-2 border rounded-lg">
                </div>
                <div>
                  <label class="block text-gray-600">Phone</label>
                  <input type="text" value="(123) 456-7890" class="w-full p-2 border rounded-lg">
                </div>
                <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Save Changes</button>
              </form>
            </div>
          </div>

          <div id="orders" class="space-y-6 hidden">
            <h1 class="text-3xl font-semibold text-gray-800">Orders</h1>
            <div class="bg-white p-6 rounded-lg shadow">
              <h2 class="text-xl font-semibold text-gray-700">Order History</h2>
              <p class="text-gray-600">Your past orders.</p>
              <div class="mt-4">
                <p class="py-2 border-b">Order #12345 - $59.99 - <span class="text-gray-600">Completed</span></p>
                <p class="py-2 border-b">Order #12346 - $89.99 - <span class="text-gray-600">Processing</span></p>
              </div>
            </div>
          </div>

          <div id="cart" class="space-y-6 hidden">
            <h1 class="text-3xl font-semibold text-gray-800">Cart</h1>
            <div class="bg-white p-6 rounded-lg shadow">
              <h2 class="text-xl font-semibold text-gray-700">Your Shopping Cart</h2>
              <p class="text-gray-600">Items currently in your cart.</p>
              <div class="mt-4">
                <p class="py-2 border-b">Product 1 - $19.99 - Qty: 1</p>
                <p class="py-2 border-b">Product 2 - $39.99 - Qty: 2</p>
              </div>
              <button class="mt-4 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Proceed to
                Checkout</button>
            </div>
          </div>

          <div id="settings" class="space-y-6 hidden">
            <h1 class="text-3xl font-semibold text-gray-800">Settings</h1>
            <div class="bg-white p-6 rounded-lg shadow">
              <h2 class="text-xl font-semibold text-gray-700">Account Settings</h2>
              <p class="text-gray-600">Update your account preferences.</p>
              <div class="space-y-4 mt-4">
                <label class="flex items-center space-x-3">
                  <input type="checkbox" checked class="form-checkbox h-5 w-5 text-blue-600">
                  <span class="text-gray-600">Receive Email Notifications</span>
                </label>
                <label class="flex items-center space-x-3">
                  <input type="checkbox" class="form-checkbox h-5 w-5 text-blue-600">
                  <span class="text-gray-600">Receive SMS Notifications</span>
                </label>
              </div>
              <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Save Settings</button>
            </div>
          </div>

        </div>

    </div>
  </main>

  <!-- Footer -->
  <%- include('../partials/mainFooter.ejs') %>
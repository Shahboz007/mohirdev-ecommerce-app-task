<!-- Navigation Bar -->
<%- include('partials/mainNav.ejs') %>

  <main>

    <!-- Product Details Section -->
    <section class="container mx-auto px-6 py-16">
      <div class="flex flex-col lg:flex-row items-center gap-8">
        <!-- Product Image -->
        <div class="w-full lg:w-1/2">
          <img src="https://via.placeholder.com/400" alt="Product Image" class="w-full rounded-lg shadow-lg">
        </div>
        <!-- Product Info -->
        <div class="w-full lg:w-1/2">
          <h2 class="text-3xl font-semibold text-gray-800">Product Name</h2>
          <p class="text-lg text-gray-600 mt-4">Category: <span class="font-medium">Accessories</span></p>
          <p class="text-xl font-bold text-gray-800 mt-4">$49.99</p>

          <p class="text-gray-700 mt-6">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla consequat, urna ut feugiat tempor, erat felis
            dapibus mauris, at convallis velit nunc ut mi. Praesent et risus ut augue scelerisque bibendum.
          </p>

          <!-- Quantity Selector and Add to Cart Button -->
          <div class="mt-6 flex items-center gap-4">
            <div class="flex items-center border rounded-md">
              <button class="px-3 py-2 text-gray-700 font-semibold" onclick="decreaseQuantity()">-</button>
              <input id="quantity" type="number" value="1" min="1"
                class="w-12 text-center border-l border-r focus:outline-none" />
              <button class="px-3 py-2 text-gray-700 font-semibold" onclick="increaseQuantity()">+</button>
            </div>
            <button class="bg-gray-800 text-white px-6 py-2 rounded-md hover:bg-gray-700">Add to Cart</button>
          </div>

          <!-- Additional Information -->
          <div class="mt-10">
            <h3 class="text-xl font-semibold text-gray-800">Product Details</h3>
            <ul class="list-disc list-inside mt-4 text-gray-700">
              <li>High-quality materials</li>
              <li>Available in multiple colors</li>
              <li>1-year warranty included</li>
            </ul>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <%- include('partials/mainFooter.ejs') %>
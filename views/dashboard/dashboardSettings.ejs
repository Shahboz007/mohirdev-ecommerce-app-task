<%- include('../partials/dashboardHeaderAndSidebar.ejs') %>
<!-- Settings Form -->
<div class="bg-white p-6 rounded-lg shadow-lg mt-6">
    <h2 class="text-gray-700 font-semibold mb-4">Update Profile Settings</h2>
    <form class="mb-8" action="/dashboard/settings"  method="post">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

            <!-- Name -->
            <div>
                <label class="block text-gray-600 mb-2">Name</label>
                <input type="text" class="w-full p-3 rounded border border-gray-300" placeholder="Enter your name"
                       value="<%= userData.name %>" name="name">
            </div>

            <!-- Email -->
            <div>
                <label class="block text-gray-600 mb-2">Email</label>
                <input type="email" class="w-full p-3 rounded border border-gray-300" placeholder="Enter your email"
                       value="<%= userData.email %>" name="email">
            </div>
        </div>

        <!-- Notifications -->
        <div class="mt-4">
            <h3 class="text-gray-700 font-semibold mb-2">Notification Settings</h3>
            <div class="flex items-center mb-2">
                <input type="checkbox" class="mr-2" id="email-notifications">
                <label for="email-notifications" class="text-gray-600">Receive email notifications</label>
            </div>
            <div class="flex items-center mb-2">
                <input type="checkbox" class="mr-2" id="sms-notifications">
                <label for="sms-notifications" class="text-gray-600">Receive SMS notifications</label>
            </div>
        </div>

        <!-- Save Button -->
        <button type="submit" class="mt-4 px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Save Changes
        </button>
    </form>

    <form class="mb-8" action="/dashboard/settings/password"  method="post">
        <!-- Password -->
        <div>
            <label class="block text-gray-600 mb-2">Password</label>
            <input type="password" class="w-full p-3 rounded border border-gray-300"
                   placeholder="Enter new password">
        </div>

        <!-- Confirm Password -->
        <div>
            <label class="block text-gray-600 mb-2">Confirm Password</label>
            <input type="password" class="w-full p-3 rounded border border-gray-300"
                   placeholder="Confirm new password">
        </div>

        <!-- Save Button -->
        <button type="submit" class="mt-4 px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Save Changes
        </button>
    </form>
</div>
<%- include('../partials/dashboardFooter.ejs') %>
<%if (status.toLowerCase() === 'pending'){%>
  <span class="bg-green-100 text-green-700 py-1 px-3 rounded-full text-sm">
    <%=status%>
  </span>
<%} else if(status.toLowerCase() === 'delivered'){%>
  <span class="bg-blue-100 text-blue-700 py-1 px-3 rounded-full text-sm">
    <%=status%>
  </span>
<%} else {%>
  <span class="bg-red-100 text-red-700 py-1 px-3 rounded-full text-sm">
    <%=status%>
  </span>
<%}%>
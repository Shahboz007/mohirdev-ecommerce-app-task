<!-- Navigation Bar -->
<%- include('partials/mainNav.ejs') %>

    <main>
        <!-- Hero Section -->
        <section class="bg-gray-200 py-16">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-4xl font-bold text-gray-800">Welcome to Our Shop</h2>
                <p class="mt-4 text-gray-600">Discover our collection of amazing products!</p>
                <a href="#" class="mt-6 inline-block bg-gray-800 text-white px-6 py-2 rounded-md hover:bg-gray-700">Shop
                    Now</a>
            </div>
        </section>

        <!-- Product Grid -->
        <section class="container mx-auto px-6 py-8">
            <h3 class="text-2xl font-semibold text-gray-800 mb-6">Featured Products</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <%productsData.forEach(product => {%>
                    <div class="bg-white shadow-md rounded-lg overflow-hidden">
                        <img src="<%=product.image%>" alt="Product Image" class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h4 class="text-lg font-semibold text-gray-800"><%=product.name%></h4>
                            <p class="text-gray-600 mt-2">$<%=product.price.toLocaleString()%></p>
                            <button class="mt-4 w-full bg-gray-800 text-white py-2 rounded-md hover:bg-gray-700">Add to
                                Cart</button>
                        </div>
                    </div>
                <%})%>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <%- include('partials/mainFooter.ejs') %>
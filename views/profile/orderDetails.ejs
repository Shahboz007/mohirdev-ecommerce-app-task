<!-- Navigation Bar -->
<%- include('../partials/mainNav.ejs') %>
  <div class="flex min-h-screen">

    <!-- Sidebar -->
    <%- include('../partials/profileSideBar')%>

      <!-- Orders Content -->
      <main class="flex-1 p-6">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">Your Orders Details  #<%=orderData._id%></h1>

        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-700 mb-4">Order Products</h2>

          <div class="overflow-x-auto">
            <table class="w-full table-auto border-collapse border border-gray-300">
              <thead>
                <tr class="bg-gray-200">
                  <th class="px-4 py-2 border">Image</th>
                  <th class="px-4 py-2 border">name</th>
                  <th class="px-4 py-2 border">Price</th>
                  <th class="px-4 py-2 border">Order&nbsp;Quantity</th>
                  <th class="px-4 py-2 border">Total&nbsp;Price</th>
                </tr>
              </thead>

              <tbody>
                <%orderData.products.forEach(item=> {%>
                  <tr>
                    <td class="px-4 py-2 border text-center">
                      <img src="<%=item.product.image%>" alt="<%=item.product.name%>" width="120">
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <%=item.product.name%>
                    </td>
                    <td class="px-4 py-2 border text-center">$<%=item.product.price.toLocaleString()%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <%=item.quantity%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      $<%=(item.quantity * item.product.price).toLocaleString()%>
                    </td>
                  </tr>
                  <%})%>
              </tbody>
            </table>
          </div>
        </div>
      </main>

  </div>

  <!-- Footer -->
  <%- include('../partials/mainFooter.ejs') %>
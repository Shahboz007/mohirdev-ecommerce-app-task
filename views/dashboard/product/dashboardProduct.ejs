<%- include('../../partials/dashboardHeaderAndSidebar.ejs') %>
    <a href="/dashboard/products/create" class="bg-gray-800 text-white py-2 px-4 rounded hover:bg-gray-700">
        New Product
    </a>
    <!-- Products Table -->
    <div class="bg-white rounded-lg shadow-lg p-6 mt-6">
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Image</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Product Name</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Price</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Stock</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Description</th>
                        <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Created At</th>
                        <th class="w-1/4 py-3 px-4 text-center text-sm font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    <!-- Example Row 1 -->
                    <%data.forEach(item=> {%>
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-4">
                                <img width="120" src="<%=item.image%>" alt="<%=item.name%>" />
                            </td>
                            <td class="py-3 px-4"><%=item.name%></td>
                            <td class="py-3 px-4"><%=item.price.toLocaleString()%></td>
                            <td class="py-3 px-4"><%=item.stock.toLocaleString()%></td>
                            <td class="py-3 px-4"><%=item.description%></td>
                            <td class="py-3 px-4"><%=item.createdAt.toLocaleDateString()%></td>
                            <td class="py-3 px-4 text-center">
                                <a class="text-blue-500 hover:text-blue-700" href="/dashboard/products/<%-item._id%>/update">Edit</a>
                                <form action="/dashboard/products/<%=item.id%>/delete" method="POST">
                                    <button class="text-red-500 hover:text-red-700 ml-4" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <%})%>

                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="flex justify-between items-center mt-4">
            <span class="text-sm text-gray-600">Showing 1 to 10 of 50 results</span>
            <div>
                <button class="px-3 py-1 mx-1 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">Previous</button>
                <button class="px-3 py-1 mx-1 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">Next</button>
            </div>
        </div>
    </div>
    <%- include('../../partials/dashboardFooter.ejs')%>
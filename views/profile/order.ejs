<!-- Navigation Bar -->
<%- include('../partials/mainNav.ejs') %>
  <div class="flex min-h-screen">

    <!-- Sidebar -->
    <%- include('../partials/profileSideBar')%>

      <!-- Orders Content -->
      <main class="flex-1 p-6">
        <h1 class="text-3xl font-semibold text-gray-800 mb-6">Your Orders</h1>

        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-700 mb-4">Order History</h2>

          <div class="overflow-x-auto">
            <table class="w-full table-auto border-collapse border border-gray-300">
              <thead>
                <tr class="bg-gray-200">
                  <th class="px-4 py-2 border">Order ID</th>
                  <th class="px-4 py-2 border">Date</th>
                  <th class="px-4 py-2 border">Status</th>
                  <th class="px-4 py-2 border">Total&nbsp;price</th>
                  <th class="px-4 py-2 border">Total&nbsp;Amount</th>
                  <th class="px-4 py-2 border">Product</th>
                  <th class="px-4 py-2 border" style="width:70%!important">Address</th>
                  <th class="px-4 py-2 border">Actions</th>
                </tr>
              </thead>

              <tbody>
                <%orderData.forEach(item=> {%>
                  <tr>
                    <td class="px-4 py-2 border text-center">#<%=item._id%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <%=item.createdAt.toLocaleDateString()%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <span class="bg-green-100 text-green-700 py-1 px-3 rounded-full text-sm">
                        <%=item.status%>
                      </span>
                    </td>
                    <td class="px-4 py-2 border text-center">$<%=item.totalPrice.toLocaleString()%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <%=item.products.length%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <%=item.totalAmount.toLocaleString()%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <%=item.address%>
                    </td>
                    <td class="px-4 py-2 border text-center">
                      <a href="/orders/12345" class="text-blue-600 hover:underline">View Details</a>
                    </td>
                  </tr>
                  <%})%>
              </tbody>
            </table>
          </div>
        </div>
      </main>

  </div>

  <!-- Footer -->
  <%- include('../partials/mainFooter.ejs') %>
<%- include('../partials/dashboardHeaderAndSidebar.ejs') %>
<!-- Products Table -->
<div class="bg-white rounded-lg shadow-lg p-6 mt-6">
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Product Name</th>
                    <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Category</th>
                    <th class="w-1/4 py-3 px-4 text-left text-sm font-semibold">Price</th>
                    <th class="w-1/4 py-3 px-4 text-center text-sm font-semibold">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-700">
                <!-- Example Row 1 -->
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-4">Wireless Headphones</td>
                    <td class="py-3 px-4">Electronics</td>
                    <td class="py-3 px-4">$120</td>
                    <td class="py-3 px-4 text-center">
                        <button class="text-blue-500 hover:text-blue-700">Edit</button>
                        <button class="text-red-500 hover:text-red-700 ml-4">Delete</button>
                    </td>
                </tr>
                <!-- Example Row 2 -->
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-4">Running Shoes</td>
                    <td class="py-3 px-4">Sportswear</td>
                    <td class="py-3 px-4">$75</td>
                    <td class="py-3 px-4 text-center">
                        <button class="text-blue-500 hover:text-blue-700">Edit</button>
                        <button class="text-red-500 hover:text-red-700 ml-4">Delete</button>
                    </td>
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="flex justify-between items-center mt-4">
        <span class="text-sm text-gray-600">Showing 1 to 10 of 50 results</span>
        <div>
            <button class="px-3 py-1 mx-1 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">Previous</button>
            <button class="px-3 py-1 mx-1 text-gray-700 bg-gray-200 rounded hover:bg-gray-300">Next</button>
        </div>
    </div>
</div>
<%- include('../partials/dashboardFooter.ejs')%>
<%- include('../../partials/dashboardHeaderAndSidebar.ejs') %>
  <!-- Main Content -->
  <main class="flex-1 p-6">
    <h1 class="text-3xl font-semibold text-gray-800 mb-6">Manage Orders</h1>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">All Orders</h2>

      <div class="overflow-x-auto">
        <table class="w-full table-auto border-collapse border border-gray-300">
          <thead>
            <tr class="bg-gray-200">
              <th class="px-4 py-2 border">Order ID</th>
              <th class="px-4 py-2 border">Customer</th>
              <th class="px-4 py-2 border">Date</th>
              <th class="px-4 py-2 border">Status</th>
              <th class="px-4 py-2 border">Total</th>
              <th class="px-4 py-2 border">Actions</th>
            </tr>
          </thead>
          <tbody>
            <!-- Example Order Row -->
            <%orderData.forEach(item=> {%>
              <tr>
                <td class="px-4 py-2 border text-center">#<%=item._id%></td>
                <td class="px-4 py-2 border text-center"><%=item.user.name%></td>
                <td class="px-4 py-2 border text-center"><%=item.createdAt.toLocaleDateString()%></td>
                <td class="px-4 py-2 border text-center">
                  <%- include('../../partials/status.ejs', status=item.status)%>
                </td>
                <td class="px-4 py-2 border text-center">$<%=item.totalPrice.toLocaleString()%></td>
                <td class="px-4 py-2 border text-center">
                  <a href="/dashboard/orders/<%=item._id%>/details" class="text-blue-600 hover:underline mr-2">View</a>
                  <button class="text-red-600 hover:underline">Delete</button>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
      </div>
    </div>
  </main>
  <%- include('../../partials/dashboardFooter.ejs')%>